<form
        method="post"
        action="{{ path('profile_deactivate_child', {'user': user.id}, {'child': child.id}) }}"
        onsubmit="return confirm('Voulez-vous supprimer l\'enfant: {{ child.getIdentity }}?');"
>
    <input
            type="hidden"
            name="_token"
            value="{{ csrf_token('user_child_deactivate_' ~ child.id) }}"
    >
    <button class="dropdown-item remove-item-btn"><i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Supprimer</button>
</form>
