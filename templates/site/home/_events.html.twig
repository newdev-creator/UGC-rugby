{% for event in events %}
    <div class="col-xxl-3 col-sm-6 project-card" id="event-{{ event.id }}">
        <div class="card card-height-100">
            <div class="card-body">
                <div class="d-flex flex-column h-100">
                    <div>
                        <a href="{{ path('event_show', {'event': event.id}) }}">
                            <img
                                src="{{ asset('images/galaxy/img-2.png') }}"
                                alt=""
                                width="100%"
                                class="rounded mb-3"
                            >
                        </a>
                    </div>
                    <div class="d-flex">
                        <div class="flex-grow-1">
                            <p class="text-muted mb-4">
                                {% include ('partials/_status.html.twig') %}
                            </p>
                        </div>
                        <div class="flex-shrink-0">
                            {% for category in event.categories %}
                                <div class="badge rounded-pill bg-danger fs-12">{{ category.name }}</div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="d-flex mb-2">
                        <div class="flex-shrink-0 me-3">
                            <div class="avatar-sm">
                                <span class="avatar-title bg-soft-warning rounded p-2">
                                    <img src="/images/brands/slack.png" alt="" class="img-fluid p-1">
                                </span>
                            </div>
                        </div>
                        <div class="flex-grow-1">
                            <h5 class="mb-1 fs-15"><a href="#" class="text-dark">{{ event.title }}</a></h5>
                            <p class="text-muted text-truncate-two-lines mb-3">{{ event.description|raw }}</p>
                        </div>
                    </div>
                    <div class="mt-auto">
                        <div class="d-flex mb-2">
                            <div class="flex-grow-1">
                                <div>Inscrits</div>
                            </div>
                            <div class="flex-shrink-0">
                                <div><i class="ri-list-check align-bottom me-1 text-muted"></i> {{ event.nbRegistrant }}/{{ event.nbMinus }}</div>
                            </div>
                        </div>
                        <div class="progress progress-sm animated-progress">
                            {% set percentage = (event.nbRegistrant / event.nbMinus) * 100 %}
                            <div class="progress-bar bg-success" role="progressbar" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100" style="width: {{ percentage }}%;"></div>
                        </div>
                    </div>
                </div>

            </div>
            <div class="card-footer bg-transparent border-top-dashed py-2">
                <div class="d-flex align-items-center">
                    <div class="flex-grow-1">
                        <div class="avatar-group">
                            {% for child in event.child %}
                                <div class="avatar-group-item shadow" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="{{ child.getIdentity }}">
                                    <div class="avatar-xxs">
                                        {% if child.childPictureName %}
                                            <img src="/uploads/images/child_pictures/{{ child.childPictureName }}" alt="Photo enfant" class="rounded-circle img-fluid">
                                        {% else %}
                                            <img src="{{ asset('/images/users/user-dummy-img.jpg') }}" alt="Photo enfant" class="rounded-circle img-fluid">
                                        {% endif %}
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
                    </div>
                    <div class="flex-shrink-0">
                        <div class="text-muted">
                            <i class="ri-calendar-event-fill me-1 align-bottom"></i>Rendez-vous le {{ event.date|date('d/m/Y') }}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endfor %}