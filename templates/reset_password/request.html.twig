{{ include('partials/main.html.twig') }}
<head>
    {{ include('partials/title-meta.html.twig', {title: 'Réinitialisation mot de passe'}) }}
    {{ include('partials/head-css.html.twig') }}
</head>
<body>
<div class="auth-page-wrapper pt-5">
    <!-- auth page bg -->
    <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
        <div class="bg-overlay"></div>
        <div class="shape">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
            </svg>
        </div>
    </div>
    <div class="auth-page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mt-sm-5 mb-4 text-white-50">
                        <div>
                            <a href="/" class="d-inline-block auth-logo">
                                <img src="{{ asset('/images/logo-light.png') }}" alt="" height="20">
                            </a>
                        </div>
                        <p class="mt-3 fs-15 fw-medium">UGC-rugby</p>
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">
                        <div class="card-body p-4">
                            {% for flash_error in app.flashes('reset_password_error') %}
                                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
                            {% endfor %}
                            <div class="text-center mt-2">
                                <h5 class="text-primary">Mot de passe oublié ?</h5>
                                <lord-icon src="https://cdn.lordicon.com/rhvddzym.json" trigger="loop" colors="primary:#0ab39c" class="avatar-xl">
                                </lord-icon>
                            </div>
                            <div class="alert alert-borderless alert-warning text-center mb-2 mx-2" role="alert">
                                Entrez votre e-mail et des instructions vous seront envoyées !
                            </div>
                            <div class="p-2">
                                {{ form_start(requestForm) }}
                                    <div class="mb-4">
                                        {{ form_row(requestForm.email) }}
                                    </div>
                                    <div class="text-center mt-4">
                                        <button class="btn btn-success w-100" type="submit">Envoyer le lien de réinitialisation</button>
                                    </div>
                                {{ form_end(requestForm) }}
                            </div>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <p class="mb-0">Attendez, je me souviens de mon mot de passe... <a href="{{ path('app_login') }}" class="fw-semibold text-primary text-decoration-underline"> Cliquez ici </a> </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <p class="mb-0 text-muted">&copy;
                            <script>document.write(new Date().getFullYear())</script> Velzon. Crafted with <i class="mdi mdi-heart text-danger"></i> by Themesbrand
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
</div>
{{ include('partials/vendor-scripts.html.twig') }}
{% block javascrits %}
    <!-- particles js -->
    <script src="{{ asset('/libs/particles.js/particles.js') }}"></script>

    <!-- particles app js -->
    <script src="{{ asset('/js/pages/particles.app.js') }}"></script>
{% endblock %}
</body>
</html>