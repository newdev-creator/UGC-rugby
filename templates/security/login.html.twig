{{ include('partials/main.html.twig') }}

<head>

    {{ include('partials/title-meta.html.twig', {title: 'Se connecter'}) }}

    {{ include('partials/head-css.html.twig') }}

</head>

<body>

<div class="auth-page-wrapper pt-5">
    <!-- auth page bg -->
    <div class="auth-one-bg-position auth-one-bg" id="auth-particles">
        <div class="bg-overlay"></div>

        <div class="shape">
            <svg xmlns="http://www.w3.org/2000/svg" version="1.1" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 1440 120">
                <path d="M 0,36 C 144,53.6 432,123.2 720,124 C 1008,124.8 1296,56.8 1440,40L1440 140L0 140z"></path>
            </svg>
        </div>
    </div>

    <!-- auth page content -->
    <div class="auth-page-content">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center mt-sm-5 mb-4 text-white-50">
                        <div>
                            <a href="/" class="d-inline-block auth-logo">
                                <img src="/images/logo-light.png" alt="" height="20">
                            </a>
                        </div>
                        <p class="mt-3 fs-15 fw-medium">UGC-rugby</p>
                    </div>
                </div>
            </div>
            <!-- end row -->

            <div class="row justify-content-center">
                <div class="col-md-8 col-lg-6 col-xl-5">
                    <div class="card mt-4">

                        <div class="card-body p-4">
                            <div class="text-center mt-2">
                                <h5 class="text-primary">Bienvenue !</h5>
                            </div>
                            {% for label, messages in app.flashes %}
                                {% for message in messages %}
                                    <div class="alert alert-{{ label }} shadow" role="alert">
                                        <strong> {{ message }} </strong>
                                    </div>
                                {% endfor %}
                            {% endfor %}
                            {% if error %}
                                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                            {% endif %}
                            <div class="p-2 mt-4">
                                <form method="POST"">

                                    <div class="mb-3">
                                        <label for="username" class="form-label">Adresse e-mail</label>
                                        <input type="email" name="email" class="form-control" id="username" placeholder="Email" value="{{ last_username }}">
                                    </div>

                                    <div class="mb-3">
                                        <div class="float-end">
                                            <a href="{{ path('app_forgot_password_request') }}" class="text-muted">Mot de passe oublier ?</a>
                                        </div>
                                        <label class="form-label" for="password-input">Mot de passe</label>
                                        <div class="position-relative auth-pass-inputgroup mb-3">
                                            <input type="password" name="password" class="form-control pe-5 password-input" placeholder="Mot de passe" id="password-input">
                                            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                            <button class="btn btn-link position-absolute end-0 top-0 text-decoration-none text-muted password-addon" type="button" id="password-addon"><i class="ri-eye-fill align-middle"></i></button>
                                        </div>
                                    </div>

                                    <div class="form-check">
                                        <input class="form-check-input" name="_remember_me" type="checkbox" value="" id="auth-remember-check" checked />
                                        <label class="form-check-label" for="auth-remember-check">Se souvenir de moi</label>
                                    </div>

                                    <div class="mt-4">
                                        <button class="btn btn-success w-100" type="submit">Connecter</button>
                                    </div>

                                </form>
                            </div>
                        </div>
                        <!-- end card body -->
                    </div>
                    <!-- end card -->

                    <div class="mt-4 text-center">
                        <p class="mb-0">Vous n'avez pas de compte ? <a href="{{ path('app_register') }}" class="fw-semibold text-primary text-decoration-underline"> S'enregistrer </a> </p>
                    </div>

                </div>
            </div>
            <!-- end row -->
        </div>
        <!-- end container -->
    </div>
    <!-- end auth page content -->

    <!-- footer -->
    <footer class="footer start-0">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="text-center">
                        <p class="mb-0 text-muted">&copy;
                            <script>
                                document.write(new Date().getFullYear())
                            </script> 
                            Fait avec 
                            <i class="mdi mdi-heart text-danger"></i> 
                            par 
                            <a href="https://newdevcreator.netlify.app" target="_blank" class="text-primary" style="--bs-text-opacity: .5;">Newdevcreator</a>
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <!-- end Footer -->
</div>
<!-- end auth-page-wrapper -->

{{ include('partials/vendor-scripts.html.twig') }}

{% block javascripts %}
<!-- particles js -->
<script src="{{ asset('/libs/particles.js/particles.js') }}"></script>
<!-- particles app js -->
<script src="{{ asset('/js/pages/particles.app.js') }}"></script>
<!-- password-addon init -->
<script src="{{ asset('/js/pages/password-addon.init.js') }}"></script>
{% endblock %}
</body>

</html>