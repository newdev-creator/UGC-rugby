{{ include('partials/main.html.twig') }}

<head>

    {{ include('partials/title-meta.html.twig', {title: 'Accueil'}) }}

    {{ include('partials/head-css.html.twig') }}

</head>

<body>

<!-- Begin page -->
<div id="layout-wrapper">

    {{ include('partials/menu.html.twig') }}

    <!-- ============================================================== -->
    <!-- Start right Content here -->
    <!-- ============================================================== -->
    <div class="main-content">

        <div class="page-content">
            <div class="container-fluid">

                {{ include('partials/page-title.html.twig', {pagetitle: 'Accueil', title: 'Liste des événements à venir'}) }}

                <div class="row g-4 mb-3">
                    <div class="col-sm">
                        <div class="d-flex justify-content-sm-end gap-2">
                            <div class="search-box ms-2">
                                {{ form_start(form) }}
                                {{ form_widget(form.q) }}
                                <i class="ri-search-line search-icon"></i>
                            </div>
                            <div>
                                {{ form_widget(form.categories) }}
                            </div>
                            <button type="submit" class="btn btn-light"><i class="ri-filter-3-line align-middle"></i></button>
                            {{ form_end(form) }}
                        </div>
                    </div>
                </div>

                <div class="row">
                    {% for event in events %}
                        <div class="col-xxl-3 col-sm-6 project-card">
                            <div class="card card-height-100">
                                <div class="card-body">
                                    <div class="d-flex flex-column h-100">
                                        <div>
                                            <a href="{{ path('event_show', {'event': event.id}) }}">
                                                <img
                                                        src="{{ asset('images/galaxy/img-2.png') }}"
                                                        alt=""
                                                        width="100%"
                                                        class="rounded mb-3"
                                                >
                                            </a>
                                        </div>
                                        <div class="d-flex">
                                            <div class="flex-grow-1">
                                                <p class="text-muted mb-4">
                                                    {% include ('partials/_status.html.twig') %}
                                                </p>
                                            </div>

                                            <div class="flex-shrink-0">
                                                {% for category in event.categories %}
                                                    <div class="badge rounded-pill bg-danger fs-12">{{ category.name }}</div>
                                                {% endfor %}

                                            </div>

                                        </div>
                                        <div class="d-flex mb-2">
                                            <div class="flex-shrink-0 me-3">
                                                <div class="avatar-sm">
                                                    <span class="avatar-title bg-soft-warning rounded p-2">
                                                        <img src="/images/brands/slack.png" alt="" class="img-fluid p-1">
                                                    </span>
                                                </div>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h5 class="mb-1 fs-15"><a href="#" class="text-dark">{{ event.title }}</a></h5>
                                                <p class="text-muted text-truncate-two-lines mb-3">{{ event.description|raw }}</p>
                                            </div>
                                        </div>
                                        <div class="mt-auto">
                                            <div class="d-flex mb-2">
                                                <div class="flex-grow-1">
                                                    <div>Inscrits</div>
                                                </div>
                                                <div class="flex-shrink-0">
                                                    <div><i class="ri-list-check align-bottom me-1 text-muted"></i> {{ event.nbRegistrant }}/{{ event.nbMinus }}</div>
                                                </div>
                                            </div>
                                            <div class="progress progress-sm animated-progress">
                                                <div class="progress-bar bg-success" role="progressbar" aria-valuenow="34" aria-valuemin="0" aria-valuemax="100" style="width: 80%;"></div><!-- /.progress-bar -->
                                            </div><!-- /.progress -->
                                        </div>
                                    </div>

                                </div>
                                <!-- end card body -->
                                <div class="card-footer bg-transparent border-top-dashed py-2">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-grow-1">
                                            <div class="avatar-group">
                                                <a href="javascript: void(0);" class="avatar-group-item shadow" data-bs-toggle="tooltip" data-bs-trigger="hover" data-bs-placement="top" title="Darline Williams">
                                                    <div class="avatar-xxs">
                                                        <img src="/images/users/avatar-2.jpg" alt="" class="rounded-circle img-fluid">
                                                    </div>
                                                </a>

                                            </div>
                                        </div>
                                        <div class="flex-shrink-0">

                                            <div class="text-muted">

                                                <i class="ri-calendar-event-fill me-1 align-bottom"></i>Rendez-vous le {{ event.date|date('d/m/Y') }}
                                            </div>
                                        </div>

                                    </div>

                                </div>
                                <!-- end card footer -->
                            </div>
                            <!-- end card -->
                        </div>
                    {% endfor %}
                    <!-- end col -->
                </div>
                <!-- end row -->

                <div class="row g-0 text-center text-sm-start align-items-center mb-4">
                    <div class="col-sm-6">
                    </div>
                    <!-- end col -->
                    <div class="col-sm-6">
                        <ul class="pagination pagination-separated justify-content-center justify-content-sm-end mb-sm-0">
                            {{ knp_pagination_render(events) }}
                        </ul>
                    </div><!-- end col -->
                </div><!-- end row -->
            </div>
            <!-- container-fluid -->
        </div>
        <!-- End Page-content -->

        {{ include('partials/footer.html.twig') }}
    </div>
    <!-- end main content-->

</div>
<!-- END layout-wrapper -->

<!-- removeProjectModal -->
<div id="removeProjectModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json" trigger="loop" colors="primary:#f7b84b,secondary:#f06548" style="width:100px;height:100px"></lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you Sure ?</h4>
                        <p class="text-muted mx-4 mb-0">Are you Sure You want to Remove this Project ?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-danger" id="remove-project">Yes, Delete It!</button>
                </div>
            </div>

        </div><!-- /.modal-content -->
    </div><!-- /.modal-dialog -->
</div><!-- /.modal -->



{{ include('partials/vendor-scripts.html.twig') }}

{% block javascripts %}
    <!-- project list init -->
    <script src="{{ asset('/js/pages/project-list.init.js') }}"></script>

    <!-- App js -->
    <script src="{{ asset('/js/app.js') }}"></script>
{% endblock %}
</body>

</html>