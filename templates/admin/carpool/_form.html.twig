{{ form_start(form) }}
<div class="row">
    <div class="d-flex justify-content-end">
        <a href="{{ path('admin_carpool_index') }}" class="btn btn-success mb-3">Retour</a>
    </div>
    <div class="col-lg-8">
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="mb-3 mb-lg-0">
                            {{ form_row(form.date) }}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        <div class="mb-3 mb-lg-0">
                            {{ form_row(form.address) }}
                        </div>
                    </div>
                    <div class="col-lg-3">
                        {{ form_row(form.postalCode) }}
                    </div>
                    <div class="col-lg-3">
                        {{ form_row(form.city) }}
                    </div>
                </div>
                <div class="mb-3">
                    {{ form_row(form.comment) }}
                </div>
            </div>
        </div>


        <!-- end card -->

    </div>
    <!-- end col -->
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Parent covoitureur</h5>
            </div>
            <div class="card-body">
                {{ form_row(form.users) }}
                {{ form_row(form.nbPlace) }}
            </div>
            <!-- end card body -->
        </div>
        <!-- end card -->

        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Événement</h5>
            </div>
            <div class="card-body">
                <div class="mb-3">
                    {{ form_row(form.event) }}
                </div>
            </div>
        </div>
        <div class="text-end mb-4">
            <a href="{{ path('admin_carpool_index') }}" class="btn btn-danger w-sm">Annuler</a>
            <button type="submit" class="btn btn-success w-sm">{{ button_label|default('Enregistrer') }}</button>
        </div>
    </div>
    <!-- end col -->
</div>
{{ form_end(form) }}
