<form
    method="post"
    action="{{ path('admin_user_child_delete', {'child': child.id}) }}"
    onsubmit="return confirm('Voulez-vous supprimer l\'enfant: {{ child.firstName }} {{ child.lastName }}?');"
>
    <input
        type="hidden"
        name="_token"
        value="{{ csrf_token('admin_user_child_delete_' ~ child.id) }}"
    >
    <button class="dropdown-item remove-item-btn"><i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Supprimer</button>
</form>
